{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "strict": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
    },
    "include": ["./src/**/*"]
}